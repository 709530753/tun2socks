srcdir = ./

CC = ../Nexus/quic_protocol/third_party/android_tools/ndk/toolchains/arm-linux-androideabi-4.9/prebuilt/linux-x86_64/bin/arm-linux-androideabi-gcc  -g

AR = ar -r

IP_VERSION = 4

CFLAGS =  -Ilwip  \
  -Ilwip/src/include/ipv$(IP_VERSION) -Ilwip/src/include 

CFLAGS += -isystem../Nexus/quic_protocol/third_party/android_tools/ndk/sources/cxx-stl/llvm-libc++/libcxx/include -isystem../Nexus/quic_protocol/third_party/android_tools/ndk/sources/cxx-stl/llvm-libc++abi/libcxxabi/include -isystem../Nexus/quic_protocol/third_party/android_tools/ndk/sources/android/support/include --sysroot=../Nexus/quic_protocol/third_party/android_tools/ndk/platforms/android-16/arch-arm 

CFLAGS += -march=armv7-a -mfloat-abi=softfp -mthumb -mthumb-interwork -mtune=generic-armv7-a  

LDFLAGS = -pthread

SOURCES = \
	lwip/src/darwin/src/compat.c \
  lwip/src/api/api_lib.c \
  lwip/src/api/api_msg.c \
  lwip/src/api/err.c \
  lwip/src/api/netbuf.c \
  lwip/src/api/netdb.c \
  lwip/src/api/netifapi.c \
  lwip/src/api/sockets.c \
  lwip/src/api/tcpip.c \
  lwip/src/core/def.c \
  lwip/src/core/dhcp.c \
  lwip/src/core/dns.c \
  lwip/src/core/init.c \
  lwip/src/core/mem.c \
  lwip/src/core/memp.c \
  lwip/src/core/netif.c \
  lwip/src/core/pbuf.c \
  lwip/src/core/raw.c \
  lwip/src/core/stats.c \
  lwip/src/core/sys.c \
  lwip/src/core/tcp.c \
  lwip/src/core/tcp_in.c \
  lwip/src/core/tcp_out.c \
  lwip/src/core/timers.c \
  lwip/src/core/udp.c \
  lwip/src/core/ipv4/autoip.c \
  lwip/src/core/ipv4/icmp.c \
  lwip/src/core/ipv4/igmp.c \
  lwip/src/core/ipv4/inet.c \
  lwip/src/core/ipv4/inet_chksum.c \
  lwip/src/core/ipv4/ip.c \
  lwip/src/core/ipv4/ip_addr.c \
  lwip/src/core/ipv4/ip_frag.c 

OBJS := $(foreach f,$(SOURCES),$(notdir $(f:.c=.o)))


vpath %.c lwip/src/core lwip/src/core/ipv4 lwip/src/api lwip/src/darwin/src

.PHONY: all check-syntax depend dep clean distclean


all: lwiplib


lwiplib: $(OBJS)
	$(AR) liblwip_android_v7a.a $(OBJS)

clean:
	rm -f $(OBJS)
	rm -rf liblwip_android_v7a.a
